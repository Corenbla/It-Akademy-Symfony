{% extends 'base.html.twig' %}

{% block title %}Annonce{% endblock %}

{% block body %}
    <h1>Annonce</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ advert.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ advert.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ advert.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
            {% if advert.rentPrice is not null %}
                <td>{{ advert.rentPrice|toEuros }}</td>
            {% elseif advert.sellPrice is not null %}
                <td>{{ advert.sellPrice|toEuros }}</td>
            {% else %}
                <td>N/A</td>
            {% endif %}
            </tr>
        </tbody>
    </table>

    <div class="mb-1">
        <a href="{{ path('advert_edit', {'id': advert.id}) }}" class="btn btn-primary">éditer</a>
    </div>
    <div class="mb-1">
        <a href="{{ path('advert_index') }}">retour à la liste</a>
    </div>

    {{ include('advert/_delete_form.html.twig') }}
{% endblock %}
